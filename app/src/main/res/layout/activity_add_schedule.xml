<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    tools:context=".Schedule.AddSchedule">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/background_light"
            android:orientation="vertical">

            <!-- 일정 이름 -->

            <EditText
                android:id="@+id/editTextSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:hint="일정 이름"
                android:inputType="textPersonName"
                android:textSize="25sp" />

            <!-- 시작 날짜 -->

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="시작"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp"
                >

                <DatePicker
                    android:id="@+id/DatePickerS"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    android:scaleX="0.8"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginRight="-30dp"

                    />

                <TimePicker
                    android:id="@+id/timePickerS"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:timePickerMode="spinner"
                    android:scaleX="0.8"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginRight="-30dp"
                    />
            </LinearLayout>

            <!-- 종료 날짜 -->

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="종료"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-15dp"
                >

                <DatePicker
                    android:id="@+id/DatePickerE"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:scaleX="0.8"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginRight="-30dp"
                    />

                <TimePicker
                    android:id="@+id/timePickerE"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:timePickerMode="spinner"
                    android:scaleX="0.8"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginRight="-30dp"
                    />
            </LinearLayout>

            <!-- 위치 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
              
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위치"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/editTextPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint=""
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textColor="@android:color/holo_green_light"
                    android:text="지도"
                    android:textSize="20sp" />
              <Button
                    android:id="@+id/button_setPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="모임 장소"
                    android:textSize="24sp"/>
              
            </LinearLayout>

            <!-- 추가 코멘트-->
            <EditText
                android:id="@+id/editTextComment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="세부사항"
                android:inputType="textMultiLine"
                android:lines="4"
                android:minLines="4"
                android:scrollbars="vertical"
                android:layout_marginLeft="10dp"
                android:textSize="15sp" />

            <!-- 추가 버튼 -->
            <Button
                android:id="@+id/buttonAddSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:text="추가"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>